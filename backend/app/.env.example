# ======================================================
# CONFIGURAÇÕES DO SISTEMA BCB (BIG CHAT BRASIL)
# ======================================================

# ======================================================
# CONFIGURAÇÕES DO BANCO DE DADOS
# ======================================================
# Host do banco de dados PostgreSQL
DB_HOST=localhost
# Porta do banco de dados PostgreSQL
DB_PORT=5432
# Nome de usuário do banco de dados
DB_USERNAME=postgres
# Senha do banco de dados
DB_PASSWORD=postgres
# Nome do banco de dados
DB_DATABASE=bcb

# ======================================================
# CONFIGURAÇÕES DA APLICAÇÃO
# ======================================================
# Porta em que o servidor vai rodar
PORT=3000
# Ambiente de execução (development, production, test)
NODE_ENV=development
# Prefixo para todas as rotas da API
API_PREFIX=api
# URL completa da API (usada pelo frontend para se comunicar com o backend)
API_URL=http://localhost:3000/api
# Host da aplicação (usado para gerar a API_URL se não for especificada)
HOST=localhost

# ======================================================
# CONFIGURAÇÕES DE SEGURANÇA
# ======================================================
# Chave secreta para geração de tokens JWT
JWT_SECRET=bcb_secret_key
# Tempo de expiração dos tokens JWT
JWT_EXPIRATION=24h

# ======================================================
# CONFIGURAÇÕES DE MENSAGENS
# ======================================================
# Preço das mensagens normais (em reais)
MESSAGE_PRICE_NORMAL=0.25
# Preço das mensagens urgentes (em reais)
MESSAGE_PRICE_URGENT=0.50
# Limite padrão de mensagens por página
MESSAGE_PAGINATION_DEFAULT=20
# Limite máximo de mensagens por página
MESSAGE_PAGINATION_MAX=100

# ======================================================
# CONFIGURAÇÕES DE CLIENTES
# ======================================================
# Saldo inicial para clientes pré-pagos (em reais)
CLIENT_PREPAID_INITIAL_BALANCE=10.00
# Limite de crédito para clientes pós-pagos (em reais)
CLIENT_POSTPAID_CREDIT_LIMIT=100.00

# ======================================================
# CONFIGURAÇÕES DE LOGS
# ======================================================
# Nível de log (debug, info, warn, error)
LOG_LEVEL=info
# Habilitar logs detalhados do TypeORM
TYPEORM_LOGGING=true
# Habilitar sincronização automática do banco de dados (apenas para desenvolvimento)
TYPEORM_SYNCHRONIZE=true
